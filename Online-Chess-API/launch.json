{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "coreclr",
      "request": "launch",
      "name": "Launch Online Chess API",
      "program": "${workspaceFolder}/Online-Chess-API/bin/Debug/net8.0/Online-Chess-API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Online-Chess-API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "preLaunchTask": "build"
    }
  ]
}